datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  cod           String         @id @default(uuid())
  nome          String
  email         String         @unique
  subscriptions Subscription[]
}

model Plan {
  cod           String         @id @default(uuid())
  nome          String
  custoMensal   Float
  subscriptions Subscription[]
}

model Subscription {
  cod                 String     @id @default(uuid())
  codPlano            String
  codCli              String
  inicioFidelidade    DateTime
  fimFidelidade       DateTime
  dataUltimoPagamento DateTime
  custoFinal          Float
  descricao           String
  Client              Client     @relation(fields: [codCli], references: [cod])
  Plan                Plan       @relation(fields: [codPlano], references: [cod])
  pagamentos          Pagamento[]
}

model Pagamento {
  cod           String       @id @default(uuid())
  dia           Int
  mes           Int
  ano           Int
  codAssinatura String
  valorPago     Float
  dataPagamento DateTime
  subscription  Subscription @relation(fields: [codAssinatura], references: [cod])
}
